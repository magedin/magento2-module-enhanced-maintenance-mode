<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\App\MaintenanceMode">
        <plugin name="magedin.enhanced.maintenance.mode.plugin"
                type="MagedIn\EnhancedMaintenanceMode\Plugin\Magento\Framework\App\MaintenanceModePlugin"
                sortOrder="10"/>
    </type>
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="magedin.enhanced.maintenance.mode.website.enable" xsi:type="object">
                    MagedIn\EnhancedMaintenanceMode\Console\Command\MaintenanceEnableWebsiteCommand
                </item>
                <item name="magedin.enhanced.maintenance.mode.website.disable" xsi:type="object">
                    MagedIn\EnhancedMaintenanceMode\Console\Command\MaintenanceDisableWebsiteCommand
                </item>
                <item name="magedin.enhanced.maintenance.mode.store.enable" xsi:type="object">
                    MagedIn\EnhancedMaintenanceMode\Console\Command\MaintenanceEnableStoreCommand
                </item>
                <item name="magedin.enhanced.maintenance.mode.store.disable" xsi:type="object">
                    MagedIn\EnhancedMaintenanceMode\Console\Command\MaintenanceDisableStoreCommand
                </item>
            </argument>
        </arguments>
    </type>
    <type name="MagedIn\EnhancedMaintenanceMode\Console\Command\MaintenanceEnableWebsiteCommand">
        <arguments>
            <argument name="maintenanceMode" xsi:type="object">
                MagedIn\EnhancedMaintenanceMode\Model\MaintenanceMode
            </argument>
        </arguments>
    </type>
    <type name="MagedIn\EnhancedMaintenanceMode\Console\Command\MaintenanceEnableStoreCommand">
        <arguments>
            <argument name="maintenanceMode" xsi:type="object">
                MagedIn\EnhancedMaintenanceMode\Model\MaintenanceMode
            </argument>
        </arguments>
    </type>
</config>
